<?xml version='1.0' encoding='utf-8'?>
<widget id="org.tagspaces.androidle" version="1.11.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TagSpaces</name>
    <description>Offline document organizer & browser for your local files, supporting easy file tagging and document editing.</description>
    <author email="info@tagspaces.org" href="http://tagspaces.org">
        TagSpaces Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="useBrowserHistory" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="AndroidExtraFilesystems" value="sdcard,cache" />
</widget>